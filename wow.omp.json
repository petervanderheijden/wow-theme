{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "blocks": [
    {
      "alignment": "left",
      "segments": [
        {
          "foreground": "#ffffff",
          "style": "plain",
          "template": " {{ .Meaning }}",
          "type": "exit"
        },
        {
          "foreground": "#100e23",
          "style": "plain",
          "template": " \uf0e7 ",
          "type": "root"
        },
        {
            "background": "#000000",
          "foreground": "#ffffff",
          "style": "plain",
          "type": "session"
        },
        {
          "background": "#007ACC",
          "foreground": "#ffffff",
          "properties": {
            "folder_icon": "\uf115",
            "folder_separator_icon": " \ue0b1 ",
            "style": "full"
          },
          "style": "plain",
          "template": "<transparent>\ue0b0</> {{ .Path }} ",
          "type": "path"
        },
        {
          "foreground": "#007ACC",
          "style": "plain",
          "template": "\ue0b0 ",
          "type": "text"
        }
      ],
      "type": "prompt"
    }
  ],
  "version": 2
}
