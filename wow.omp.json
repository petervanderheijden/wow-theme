{
    "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
    "blocks": [
      {
        "alignment": "left",
        "segments": [
          {
            "background": "#000000",
            "foreground": "#ffffff",
            "style": "plain",
            "type": "session"
          },
          {
            "background": "#1478DB",
            "foreground": "#000000",
            "leading_diamond": "\ue0b6",
            "trailing_diamond": "\uE0B0",
            "properties": {
              "style": "full"
            },
            "style": "diamond",
            "template": "{{ .Path }} ",
            "type": "path"
          }
        ],
        "type": "prompt"
      }
    ],
    "final_space": true,
    "version": 2
  }
